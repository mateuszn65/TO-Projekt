<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<?import org.controlsfx.control.GridView?>
<VBox maxHeight="Infinity"
      maxWidth="Infinity"
      prefHeight="600"
      prefWidth="800"
      minHeight="220"
      minWidth="200"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="galleryView"
      fx:controller="agh.oop.gallery.controllers.GalleryViewController">

    <Button mnemonicParsing="false"
            onAction="#handleUploadOnAction"
            onDragDropped="#handleDragDropped"
            onDragOver="#handleDragOver"
            minHeight="40.0"
            minWidth="100"
            maxWidth="Infinity"
            text="upload"/>
    <Button mnemonicParsing="false"
            onAction="#setSmallMiniatures"
            minHeight="20.0"
            minWidth="20.0"
            text="small"/>
    <Button mnemonicParsing="false"
            onAction="#setMediumMiniatures"
            minHeight="20.0"
            minWidth="20.0"
            text="medium"/>
    <Button mnemonicParsing="false"
            onAction="#setBigMiniatures"
            minHeight="20.0"
            minWidth="20.0"
            text="big"/>
    <GridView fx:id="imagesGridView" prefWidth="Infinity"/>
</VBox>



